<div class='single-post'>
  <blockquote class='blockquote'>
    <div class='text-in-post'>
      <div class='row'>
        <div class='col-md-7'>
          <h3><b><a href="{{this.url}}">{{this.title}}</a></b></h3>
        </div>
        <div class='col-md-3'>
          <h5>({{this.view_counter}} views - {{this.comments_count}} comments)</h5>
        </div>
        <div class='col-md-2'>
          <h5>({{this.post_time_to_s}})</h5>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-12'>
          {{{this.body_summary}}}
        </div>
      </div>
      <div class='row'>
        <div class='col-md-4'>
        <footer><a href="{{this.user_url}}">{{this.username}}</a></footer>
        </div>
        <div class='col-md-8'>
        </div>
      </div>
    </div>
  </blockquote>
</div>


