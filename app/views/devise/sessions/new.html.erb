<!-- render "devise/shared/links" -->
<body class="login-page">
<div class="login-page-header"><h1 class="login-header">Is it just me, or...?</h1></div>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading"> <strong class="">Sign in</strong>

        </div>
        <div class="panel-body">
          <form class="form-horizontal" role="form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.email_field :email, class: "form-control", autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
              </div>
            </div>
            <div class="form-group">
              <% if devise_mapping.rememberable? -%>
                <div class="col-sm-offset-3 col-sm-9">
                  <div class="checkbox">
                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                  </div>
                </div>
              <% end -%>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9">
                <%= f.submit "Sign in", class: "btn btn-secondary btn-sm" %>
                  <button type="reset" class="btn btn-default btn-sm">Reset</button>
              </div>
            </div>

            <hr>

            <div class="form-group last">
              <div class="col-sm-3 control-label"></div>
              <div class="col-sm-9">
                <%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook), class: 'btn btn-large btn-primary' %>
                <%= link_to 'Sign in with Google+', user_omniauth_authorize_path(:facebook), class: 'btn btn-large btn-danger' %>
              </div>
            </div>

            <% end %>
            </form>
          </div>

        <div class="panel-footer"><%= link_to "Not registered? Register here", new_registration_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
