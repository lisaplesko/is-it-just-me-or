<body class="login-page">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel-body">
          <h1 class="login-header">Is it just me, or...?</h1>
          <div class="form-group last">
            <div class="col-lg-6">
              <%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook), class: 'btn btn-large btn-primary btn-block' %>
            </div>
             <div class="col-lg-6">
              <%= link_to 'Sign in with Google+', user_omniauth_authorize_path(:facebook), class: 'btn btn-large btn-danger btn-block' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
