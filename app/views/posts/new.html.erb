<div class="container">
  <%= render 'photo_header' %>

  <div class="post-container" >
    <div class="status"></div>
    <div id="new-post-form">
      <%= form_for(@post) do |f| %>
        <%= f.text_field :title,
                          input_html: {class: ""},
                          placeholder: "title", class: "title-input-field" %>
        <select name="category">
        <option value="nil">Select a Category for Post</option>
          <% @category_options.each do |category| %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% end %>
        </select>


        <%= f.hidden_field :body %>

        <div class="post-body editable" id="editor" contentEditable='true' data-placeholder='Is it just me, or...'></div>

        <%= f.submit 'Create new post', class: "outline-button" %>
      <% end %>

    </div>
  </div>

</div>


<%= link_to 'Back', posts_path %>
