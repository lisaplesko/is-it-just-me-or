<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.body %>|<%= comment.user%></li>
  <% end %>
</ul>

<% if @post.user == current_user %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>

<%= link_to 'Back', posts_path %>

<%= render 'comments/form' %>
